    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#FFFFFA" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <gap:config-file parent="UIStatusBarHidden" platform="ios">
        <true />
    </gap:config-file>
    <gap:config-file parent="UIViewControllerBasedStatusBarAppearance" platform="ios">
        <false />
    </gap:config-file>
    <gap:config-file parent="CFBundleShortVersionString" platform="ios">
        <string>120</string>
    </gap:config-file>
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <gap:config-file overwrite="true" parent="NSCameraUsageDescription" platform="ios">
        <string>The app may require the camera or the photolibrary in order to get pictures of user's invoices. The images are a proof the user has bought something at the shopping center. Pictures are destroyed after the proof has been validated.</string>
    </gap:config-file>
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="bingmaps:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="android-build-tool" value="gradle" />
    <plugin name="phonegap-plugin-push" source="npm" spec="1.8.1">
        <param name="SENDER_ID" value="381793796659" />
    </plugin>
    <plugin name="cordova-plugin-statusbar" spec="~2.1.3" />
</widget>
