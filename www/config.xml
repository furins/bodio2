<?xml version='1.0' encoding='utf-8'?>
<widget id="it.indalo.bodio" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Bodio</name>
    <description>
        Applicazione per centri commerciali
    </description>
    <author email="sviluppo@dolomitiproject.it" href="https://www.dolomitiproject.it">
        Dolomiti Project
    </author>
    <preference name="permissions" value="none" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-installLocation" value="auto" />
    <preference name="windows-identity-name" value="PhonegapBuild.PGBDeveloper" />
    <gap:plugin name="cordova-plugin-camera" source="npm">
        <param name="CAMERA_USAGE_DESCRIPTION" value="The app may require the camera or the photolibrary in order to get pictures of user's invoices. The images are a proof the user has bought something at the shopping center. Pictures are destroyed after the proof has been validated." />
        <param name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="The app may require the camera or the photolibrary in order to get pictures of user's invoices. The images are a proof the user has bought something at the shopping center. Pictures are destroyed after the proof has been validated." />
    </gap:plugin>
    <plugin name="cordova-plugin-media-capture" source="npm">
        <param name="CAMERA_USAGE_DESCRIPTION" value="The app may require the camera or the photolibrary in order to get pictures of user's invoices. The images are a proof the user has bought something at the shopping center. Pictures are destroyed after the proof has been validated." />
        <param name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="The app may require the camera or the photolibrary in order to get pictures of user's invoices. The images are a proof the user has bought something at the shopping center. Pictures are destroyed after the proof has been validated." />
        <param name="MICROPHONE_USAGE_DESCRIPTION" value="The app does not use the microphone." />
    </plugin>
    <plugin name="cordova-plugin-console" source="npm" />
    <plugin name="cordova-plugin-device" source="npm" />
    <plugin name="cordova-plugin-device-motion" source="npm" />
    <plugin name="cordova-plugin-device-orientation" source="npm" />
    <plugin name="cordova-plugin-dialogs" source="npm" />
    <plugin name="cordova-plugin-file" source="npm" />
    <plugin name="cordova-plugin-file-transfer" source="npm" />
    <plugin name="cordova-plugin-geolocation" source="npm">
        <param name="GEOLOCATION_USAGE_DESCRIPTION" value="The app may use geolocation to calculate the distance from the shopping center." />
    </plugin>
    <plugin name="cordova-plugin-globalization" source="npm" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" />
    <plugin name="cordova-plugin-media" source="npm">
        <param name="MICROPHONE_USAGE_DESCRIPTION" value="The app does not use the microphone." />
    </plugin>
    <plugin name="cordova-plugin-network-information" source="npm" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <plugin name="cordova-plugin-vibration" source="npm" />
    <plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" source="npm" />
    <!-- icon src="ios.png" /-->
    <platform name="android">
        <!--icon density="ldpi" qualifier="ldpi" src="./res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" qualifier="mdpi" src="./res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" qualifier="hdpi" src="./res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" qualifier="xhdpi" src="./res/icon/android/icon-96-xhdpi.png" />
        <icon density="xxhdpi" qualifier="xxhdpi" src="./res/icon/android/icon-144-xxhdpi.png" />
        <icon density="xxxhdpi" qualifier="xxxhdpi" src="./res/icon/android/icon-192-xxxhdpi.png" />
        <splash qualifier="port-ldpi" src="./res/splashscreens/splash-320x200.png" />
        <splash qualifier="port-mdpi" src="./res/splashscreens/splash-320x480.png" />
        <splash qualifier="port-hdpi" src="./res/splashscreens/splash-480x800.png" />
        <splash qualifier="port-xhdpi" src="./res/splashscreens/splash-720px1280.png" /-->
        <preference name="fullscreen" value="false" />
    </platform>
