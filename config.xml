<?xml version='1.0' encoding='utf-8'?>
<widget id="it.indalo.bodio" version="1.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Bodio</name>
    <description>
        Applicazione per centri commerciali.
    </description>
    <author email="sviluppo@dolomitiproject.it" href="https://www.dolomitiproject.it">
        Dolomiti Project
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <engine name="android" spec="~7.1.4" />
    <engine name="ios" spec="~4.5.5" />
    <engine name="browser" spec="~5.0.4" />
    <plugin name="cordova-plugin-statusbar" spec="2.4.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="3.0.0" />
    <plugin name="cordova-plugin-file" spec="6.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="5.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <preference name="android-minSdkVersion" value="26" />
    <preference name="Orientation" value="portrait" />


    <platform name="android">
        <resource-file src="res/values/colors.xml" target="/app/src/main/res/values/colors.xml" />
        <icon background="@color/background" density="ldpi" foreground="res/icon/android/icon-36-ldpi.png" />
        <icon background="@color/background" density="mdpi" foreground="res/icon/android/icon-48-mdpi.png" />
        <icon background="@color/background" density="hdpi" foreground="res/icon/android/icon-72-hdpi.png" />
        <icon background="@color/background" density="xhdpi" foreground="res/icon/android/icon-96-xhdpi.png" />
        <icon background="@color/background" density="xxhdpi" foreground="res/icon/android/icon-144-xxhdpi.png" />
        <icon background="@color/background" density="xxxhdpi" foreground="res/icon/android/icon-192-xxxhdpi.png" />
        <splash src="res/screen/android/splash-port/screen-hdpi-portrait.png" density="port-hdpi"/>
        <splash src="res/screen/android/splash-port/screen-ldpi-portrait.png" density="port-ldpi"/>
        <splash src="res/screen/android/splash-port/screen-mdpi-portrait.png" density="port-mdpi"/>
        <splash src="res/screen/android/splash-port/screen-xhdpi-portrait.png" density="port-xhdpi"/>
    </platform>
    
    <platform name="ios">
        <icon src="res/ios/icon-60-3x.png" width="180" height="180" />
        
        <icon src="res/ios/icon-60.png" width="60" height="60" />
        <icon src="res/ios/icon-60-2x.png" width="120" height="120" />
        <icon src="res/ios/icon-76.png" width="76" height="76" />
        <icon src="res/ios/icon-76-2x.png" width="152" height="152" />
        <icon src="res/ios/icon-40.png" width="40" height="40" />
        <icon src="res/ios/icon-40-2x.png" width="80" height="80" />
        <icon src="res/ios/icon-57.png" width="57" height="57" />
        <icon src="res/ios/icon-57-2x.png" width="114" height="114" />
        <icon src="res/ios/icon-72.png" width="72" height="72" />
        <icon src="res/ios/icon-72-2x.png" width="144" height="144" />
        <icon src="res/ios/icon-167.png" width="167" height="167" />
        <icon src="res/ios/icon-small.png" width="29" height="29" />
        <icon src="res/ios/icon-small-2x.png" width="58" height="58" />
        <icon src="res/ios/icon-87.png" width="87" height="87" />
        <icon src="res/ios/icon-50.png" width="50" height="50" />
        <icon src="res/ios/icon-50-2x.png" width="100" height="100" />
        <icon src="res/ios/icon-167.png" width="167" height="167" />

        
        <splash src="res/screen/ios/screen-iphone-portrait.png" width="320" height="480"/>
        <splash src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" height="960"/>
        <splash src="res/screen/ios/screen-ipad-portrait.png" width="768" height="1024"/>
        <splash src="res/screen/ios/screen-ipad-portrait-2x.png" width="1536" height="2048"/>
        <splash src="res/screen/ios/screen-ipad-landscape.png" width="1024" height="768"/>
        <splash src="res/screen/ios/screen-ipad-landscape-2x.png" width="2048" height="1536"/>
        <splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136"/>
        <splash src="res/screen/ios/screen-iphone-portrait-667h.png" width="750" height="1334"/>
        <splash src="res/screen/ios/screen-iphone-portrait-736h.png" width="1242" height="2208"/>
    </platform>

</widget>
